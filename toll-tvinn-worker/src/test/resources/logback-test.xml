<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false" scan="false">
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>%highlight(%d{HH:mm:ss.SSS}) %highlight([%thread]) %highlight(%-5level) %highlight(%logger{1}) %highlight(- %msg%n)
            </pattern>
        </encoder>
    </appender>

    <logger name="io.descoped.dc" level="TRACE"/>
    <logger name="io.descoped.dc.content" level="TRACE"/>
    <logger name="io.descoped.dc.content.provider.discarding.DiscardingContentStore" level="NONE"/>
    <logger name="io.descoped.dc.content.provider.discarding.DiscardingContentStreamBuffer" level="NONE"/>
    <logger name="io.descoped.dc.core.handler.PublishHandler" level="NONE"/>
    <logger name="io.descoped.rawdata.api" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
